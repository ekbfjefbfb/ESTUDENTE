# =========================
# ENTORNO
# =========================
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=tu-secret-key-super-segura-cambiar-en-produccion
LOG_LEVEL=INFO

# =========================
# ARQUITECTURA DISTRIBUIDA
# =========================
# Backend API (Railway/Render): Sin GPU, solo lógica de negocio
# Servidor IA (RunPod/Vast.ai): Con GPU, modelos pesados

USE_REMOTE_AI=true
AI_SERVER_URL=https://tu-servidor-gpu.runpod.io
AI_MODEL=qwen2.5-omni:57b
VISION_MODEL=qwen2.5-omni:57b
TEXT_MODEL=qwen2.5-omni:57b

# =========================
# BASE DE DATOS
# =========================
DATABASE_URL=postgresql://user:pass@host:5432/dbname
DATABASE_URL_SYNC=postgresql://user:pass@host:5432/dbname

# =========================
# REDIS
# =========================
REDIS_URL=redis://default:password@host:6379
REDIS_PASSWORD=tu-redis-password
REDIS_MAX_CONNECTIONS=50

# =========================
# JWT
# =========================
JWT_SECRET_KEY=tu-jwt-secret-key-diferente
ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_EXPIRATION_DAYS=7

# =========================
# CORS
# =========================
CORS_ORIGINS=https://tu-frontend.com,https://www.tu-frontend.com

# =========================
# MODELOS IA (en servidor GPU remoto)
# =========================
# Whisper (STT)
USE_LOCAL_WHISPER=true
WHISPER_MODEL=large-v3
WHISPER_DEVICE=cuda

# Coqui TTS
USE_LOCAL_TTS=true
COQUI_TTS_MODEL=tts_models/multilingual/multi-dataset/xtts_v2
COQUI_TTS_DEVICE=cuda

# HunyuanVideo
HUNYUAN_VIDEO_ENABLED=true
HUNYUAN_MODEL_PATH=tencent/HunyuanVideo
HUNYUAN_TORCH_DTYPE=float16
MAX_VIDEO_DURATION_SECONDS=30
VIDEO_GENERATION_LIMIT_PER_DAY=200

# LiveSearch
LIVESEARCH_ENABLED=true
SEARXNG_URL=

# =========================
# STORAGE (Backblaze B2)
# =========================
STORAGE_TYPE=b2
B2_APPLICATION_KEY_ID=tu-b2-key-id
B2_APPLICATION_KEY=tu-b2-application-key
B2_BUCKET_NAME=tu-bucket

# =========================
# OAUTH (opcional)
# =========================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# =========================
# INTEGRACIONES (opcional)
# =========================
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=
NOTION_CLIENT_ID=
NOTION_CLIENT_SECRET=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# =========================
# MÉTRICAS
# =========================
METRICS_ENABLED=true
SENTRY_DSN=

# =========================
# RATE LIMITING
# =========================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=20

# =========================
# VISION PIPELINE
# =========================
VISION_PIPELINE_ENABLED=true
VISION_DEVICE=auto
VISION_MAX_FILE_SIZE_MB=10

# =========================
# FEATURE FLAGS
# =========================
FEATURE_PERMISSIONS_SYSTEM=true
FEATURE_SEMANTIC_SEARCH=true
FEATURE_PERSONAL_AGENTS=true
FEATURE_HYBRID_CHAT=true
FEATURE_ANALYTICS=true

# =========================
# PERFORMANCE
# =========================
REQUEST_TIMEOUT_SECONDS=45
DATABASE_TIMEOUT_SECONDS=15
EXTERNAL_API_TIMEOUT_SECONDS=20
WORKER_CONNECTIONS=2000
MAX_WORKERS=8
CACHE_TTL_SECONDS=600
CACHE_MAX_SIZE=5000
CACHE_COMPRESSION_ENABLED=true
